{
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "Monokai",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.fontFamily": "'SF Mono Powerline','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.dragAndDrop": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.minimap.enabled": false,
    "files.autoGuessEncoding": true,
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.enableExperiments": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "explorer.confirmDragAndDrop": false,
    "search.showLineNumbers": true,
    "terminal.external.linuxExec": "urxvt",
    "terminal.integrated.copyOnSelection": true,
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    "git.enableSmartCommit": true,
    "git.rebaseWhenSync": true,
    "eslint.alwaysShowStatus": true,
    "vetur.format.enable": false,
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "window.zoomLevel": 0,
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "polacode.backgroundColor": "white",
    "polacode.transparentBackground": true,
    "polacode.target": "snippet",
    "polacode.shadow": "",
    "git.autofetch": true,
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "prolog.dialect": "ecl",
    "workbench.startupEditor": "newUntitledFile",
    "vetur.completion.tagCasing": "initial",
    "python.dataScience.askForKernelRestart": false,
    "prettier.trailingComma": "none",
    "prettier.arrowParens": "avoid",
    "prolog.format.enabled": false,
    "prolog.linter.run": "never",
    "cSpell.language": "fr",
    "python.defaultInterpreterPath": "python3",
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django"
    ],
}
