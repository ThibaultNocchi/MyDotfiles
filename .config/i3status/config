# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 10
	color_good = "#8BC34A"
	color_bad = "#F44336"
	color_degraded = "#FF9800"
	output_format = "i3bar"
}

order += "disk /"
order += "wireless _first_"
order += "memory"
order += "battery all"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "volume master"
order += "tztime local"


wireless _first_ {
        format_up = "%quality %essid %ip "
        format_down = "No WIFI"
}

volume master {
	format = "Vol.: %volume"
	format_muted = "Vol.: /"
}

battery all {
        format = "%percentage %remaining"
	integer_battery_capacity = true
	threshold_type = "time"
	low_threshold = 30
}

tztime local {
        format = "%d-%m-%Y %H:%M"
}

cpu_usage {
        format = "CPU: %usage"
}

cpu_temperature 0 {
	format = "%degrees °C"
}

disk "/" {
        format = "%avail"
}

memory {
	format = "%available"
	threshold_degraded = 25%
	threshold_critical = 12%
}
